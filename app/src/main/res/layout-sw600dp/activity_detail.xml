<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <FrameLayout
        android:id="@+id/steplist_container"
        android:layout_width="@dimen/separator_position"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/seperator"
        android:layout_width="@dimen/separator_width"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toRightOf="@+id/steplist_container"/>

    <FrameLayout
        android:id="@+id/selected_step_container"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/seperator"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>